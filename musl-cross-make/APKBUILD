# Maintainer: Oliver Smith <ollieparanoid@bitmessage.ch>
# WARNING: musl-cross-make has an unknown license:
# https://github.com/richfelker/musl-cross-make/issues/25

pkgname=musl-cross-make
pkgver=0.9.5a
pkgrel=2
pkgdesc="Simple makefile-based build for musl cross compiler"
url="https://github.com/richfelker/musl-cross-make"
arch="noarch"
license="UNKNOWN"
depends=""
makedepends=""
subpackages=""
source="${pkgname}-${pkgver}.tar.gz::https://github.com/richfelker/${pkgname}/archive/v${pkgver}.tar.gz"
options="!check"

builddir="$srcdir/$pkgname-$pkgver"
package() {
	install -d $pkgdir/usr/share
	mv $builddir $pkgdir/usr/share/musl-cross-make
}
sha512sums="0376c7b6f04771b3f04d51ebd6f879ed79622ac12070e7a387771708c50ade978c74e611c9226b0a8c6eeee27a165493b5851e85489549555e4cf92d730fc8d4  musl-cross-make-0.9.5a.tar.gz"
